<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
      <TargetFramework>netstandard2.0</TargetFramework>
      <IsPackable>true</IsPackable>
      <Version>1.0.0</Version>
      <CodeAnalysisRuleSet>..\Analysis.ruleset</CodeAnalysisRuleSet>
      <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="ZES" Version="1.0.403" />
    </ItemGroup>

    <ItemGroup>
      <None Update="Commands\RegisterHashflare.tt">
        <Generator>TextTemplatingFileGenerator</Generator>
        <LastGenOutput>RegisterHashflare.cs</LastGenOutput>
      </None>
      <None Update="Commands\RegisterHashflareHandler.tt">
        <Generator>TextTemplatingFileGenerator</Generator>
        <LastGenOutput>RegisterHashflareHandler.cs</LastGenOutput>
      </None>
      <None Update="Commands\BuyHashrateAtHashflare.tt">
        <Generator>TextTemplatingFileGenerator</Generator>
        <LastGenOutput>BuyHashrateAtHashflare.cs</LastGenOutput>
      </None>
      <None Update="Commands\BuyHashrateAtHashflareHandler.tt">
        <Generator>TextTemplatingFileGenerator</Generator>
        <LastGenOutput>BuyHashrateAtHashflareHandler.cs</LastGenOutput>
      </None>
      <None Update="Commands\ExpireContractHashflare.tt">
        <Generator>TextTemplatingFileGenerator</Generator>
        <LastGenOutput>ExpireContractHashflare.cs</LastGenOutput>
      </None>
      <None Update="Commands\CreatePurchase.tt">
        <Generator>TextTemplatingFileGenerator</Generator>
        <LastGenOutput>CreatePurchase.cs</LastGenOutput>
      </None>
      <None Update="Commands\CreatePurchaseHandler.tt">
        <Generator>TextTemplatingFileGenerator</Generator>
        <LastGenOutput>CreatePurchaseHandler.cs</LastGenOutput>
      </None>
      <None Update="Commands\ExpireContractHashflareHandler.tt">
        <Generator>TextTemplatingFileGenerator</Generator>
        <LastGenOutput>ExpireContractHashflareHandler.cs</LastGenOutput>
        <DependentUpon>ExpireContractHashflare.tt</DependentUpon>
      </None>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Commands\RegisterHashflare.cs">
        <DependentUpon>RegisterHashflare.tt</DependentUpon>
      </Compile>
      <Compile Update="Commands\RegisterHashflareHandler.cs">
        <DependentUpon>RegisterHashflareHandler.tt</DependentUpon>
      </Compile>
      <Compile Update="Commands\BuyHashrateAtHashflare.cs">
        <DependentUpon>BuyHashrateAtHashflare.tt</DependentUpon>
      </Compile>
      <Compile Update="Commands\BuyHashrateAtHashflareHandler.cs">
        <DependentUpon>BuyHashrateAtHashflareHandler.tt</DependentUpon>
      </Compile>
      <Compile Update="Commands\ExpireContractHashflare.cs">
        <DependentUpon>ExpireContractHashflare.tt</DependentUpon>
      </Compile>
      <Compile Update="Commands\CreatePurchase.cs">
        <DependentUpon>CreatePurchase.tt</DependentUpon>
      </Compile>
      <Compile Update="Commands\CreatePurchaseHandler.cs">
        <DependentUpon>CreatePurchaseHandler.tt</DependentUpon>
      </Compile>
      <Compile Update="Commands\ExpireContractHashflareHandler.cs">
        <DependentUpon>ExpireContractHashflareHandler.tt</DependentUpon>
      </Compile>
    </ItemGroup>

</Project>
